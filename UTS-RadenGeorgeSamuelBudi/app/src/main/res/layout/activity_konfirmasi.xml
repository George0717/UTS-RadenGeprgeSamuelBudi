<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/welcome"
    tools:context=".Konfirmasi">

    <TextView
        android:id="@+id/tv_konfirmasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konfrimasi Pendaftaran"
        android:textSize="90px"
        android:layout_marginTop="20px"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/tv_nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_konfirmasi"
        android:text="Nama"
        android:layout_marginTop="80px"
        android:layout_marginLeft="25px"
        android:textSize="50px"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/tv_nomor_pendaftaran"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nomor Pendafataran"
        android:layout_below="@+id/tv_nama"
        android:layout_marginTop="50px"
        android:layout_marginLeft="25px"
        android:textColor="@color/white"
        android:textSize="50px"
        />

    <TextView
        android:id="@+id/tv_spin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilihan"
        android:layout_below="@+id/tv_nomor_pendaftaran"
        android:layout_marginTop="50px"
        android:layout_marginLeft="25px"
        android:textColor="@color/white"
        android:textSize="50px"
        />





</RelativeLayout>